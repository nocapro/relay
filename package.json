{
  "name": "relaycode-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun --filter \"*\" dev",
    "build": "bun --filter \"*\" build",
    "check": "bun run check:ts && bun run check:rust",
    "check:ts": "bun --filter \"*\" typecheck",
    "check:rust": "cd crates/relaycode-api && cargo check",
    "postinstall": "cargo build --manifest-path crates/relaycode-api/Cargo.toml"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  }
}